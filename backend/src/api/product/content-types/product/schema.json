{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "nome": {
      "type": "string"
    },
    "descrizione": {
      "type": "richtext"
    },
    "prezzo": {
      "type": "decimal"
    },
    "prezzo_scontato": {
      "type": "decimal"
    },
    "is_service": {
      "type": "boolean",
      "default": false
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "stock": {
      "type": "integer",
      "default": 0
    },
    "barcode": {
      "type": "string",
      "unique": true
    },
    "immagine": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "galleria": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "animal": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::animal.animal"
    },
    "varianti": {
      "type": "component",
      "repeatable": true,
      "component": "product.variant"
    }
  }
}