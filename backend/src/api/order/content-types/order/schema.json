{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "stripe_id": {
      "type": "string"
    },
    "total_paid": {
      "type": "decimal"
    },
    "stato": {
      "type": "enumeration",
      "enum": [
        "In Attesa",
        "Pagato",
        "Completato",
        "Spedito"
      ]
    },
    "shipping_details": {
      "type": "json"
    },
    "cart_snapshot": {
      "type": "json"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    }
  }
}
